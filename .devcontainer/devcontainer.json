{
    "name": "MiniGPT CUDA",
    "dockerFile": "Dockerfile",
    "runArgs": ["--gpus", "all"],
    "workspaceFolder": "/workspace",
    "postCreateCommand": "mkdir -p build",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools"
            ],
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            }
        }
    }
}
